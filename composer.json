		"nette/mail":"^3.0",
		"nette/di":"^3.0",
		"sendgrid/sendgrid": "^7.0"
	},
	"require-dev": 
	{
		"nette/tester":"*",
		"tracy/tracy":"*",
		"composer/composer": "*",
